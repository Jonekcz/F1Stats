@{
    ViewData["Title"] = "Klasyfikacja";
    int i = 1;
}

<section id="drivers-standings">
    <h2>Klasyfikacja generalna</h2><br />

    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th scope="col">
                    Pozycja
                </th>
                <th scope="col">
                    Imię
                </th>
                <th scope="col">
                    Nazwisko
                </th>
                <th scope="col">
                    Punkty
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.DriverStandings)
            {
                <tr>
                    <td>
                        @(i++)
                    </td>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Lastname
                    </td>
                    <td>
                        @item.Points
                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>
<section id="teams-standings">
    <h2>Klasyfikacja konstruktorów</h2><br />

    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th scope="col">
                    Pozycja
                </th>
                <th scope="col">
                    Zespół
                </th>
                <th scope="col">
                    Punkty
                </th>
            </tr>
        </thead>
        <tbody>
            @{i = 1;}
            @foreach (var item in ViewBag.TeamsStandings)
            {
                <tr>
                    <td>
                        @(i++)
                    </td>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Points
                    </td>
                </tr>

            }
        </tbody>
    </table>
</section>